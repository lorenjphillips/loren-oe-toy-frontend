{
  "name": "pharma-ad-analytics",
  "version": "1.0.0",
  "description": "Comparative effectiveness framework for pharmaceutical advertising",
  "main": "index.js",
  "engines": {
    "node": ">=18.x",
    "npm": ">=10.x"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "vercel-build": "next build",
    "vercel-deploy": "vercel deploy --prod",
    "deploy": "node scripts/deploy.js",
    "deploy:preview": "vercel",
    "deploy:production": "vercel --prod",
    "verify": "node scripts/verification-checklist.js",
    "kv:setup": "vercel kv create openevidence-analytics && vercel kv link openevidence-analytics",
    "env:setup": "bash -c 'cat .env.example | while read line; do [[ ! \"$line\" =~ ^# && ! -z \"$line\" ]] && key=$(echo $line | cut -d= -f1) && echo \"Adding $key to Vercel...\" && npx vercel env add \"$key\"; done'",
    "pre-deploy": "npm run lint && npm run build",
    "post-deploy": "npm run verify"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@mui/icons-material": "^6.4.8",
    "@mui/material": "^6.4.8",
    "@mui/x-date-pickers": "^7.28.0",
    "@react-pdf/renderer": "^4.3.0",
    "@types/d3": "^7.4.3",
    "@types/d3-sankey": "^0.12.4",
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vercel/analytics": "^1.2.0",
    "@vercel/kv": "^3.0.0",
    "@vercel/speed-insights": "^1.0.0",
    "apexcharts": "^4.5.0",
    "axios": "^1.8.4",
    "d3": "^7.9.0",
    "d3-sankey": "^0.12.3",
    "jstat": "^1.9.6",
    "next": "^14.0.0",
    "openai": "^4.89.0",
    "react": "^18.2.0",
    "react-apexcharts": "^1.7.0",
    "react-dom": "^18.2.0",
    "recharts": "^2.10.0",
    "typescript": "^5.0.0",
    "uuid": "^11.1.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "autoprefixer": "^10.4.0",
    "eslint": "^8.0.0",
    "eslint-config-next": "^14.0.0",
    "node-fetch": "^3.3.0",
    "postcss": "^8.4.0",
    "tailwindcss": "^3.3.0",
    "vercel": "^32.0.0"
  }
}

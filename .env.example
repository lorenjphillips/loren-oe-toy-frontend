# OpenEvidence Ad Platform - Environment Variables

# API Keys
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o

# Ad System Configuration
AD_ANALYTICS_ENABLED=true
AD_MAX_SLOTS_PER_PAGE=2
AD_REFRESH_INTERVAL=60000
AD_MIN_CONFIDENCE_THRESHOLD=0.25

# Feature Flags
FEATURE_AD_SYSTEM=true
FEATURE_AD_ANALYTICS=true
FEATURE_AD_ADMIN=false

# Vercel-specific settings
VERCEL_URL=localhost:3000
VERCEL_ENV=development 

# Vercel KV Configuration
KV_URL=your_kv_url_here
KV_REST_API_URL=your_kv_rest_api_url_here
KV_REST_API_TOKEN=your_kv_rest_api_token_here
KV_REST_API_READ_ONLY_TOKEN=your_kv_read_only_token_here 